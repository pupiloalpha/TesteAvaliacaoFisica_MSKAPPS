<?xml version="1.0" encoding="utf-8"?>

<!--suppress ALL -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Sombra -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#10000000" />
                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="2dp">
                <shape android:shape="oval">
                    <solid android:color="#12000000" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
                <shape android:shape="oval">
                    <solid android:color="#14000000" />
                </shape>
            </item>
            <!-- Botao redondo -->
            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="2dp">
                <shape android:shape="oval">
                    <solid android:color="@color/vermelho" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true">

        <layer-list>
            <!-- Sombra -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#10000000" />
                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="2dp">
                <shape android:shape="oval">
                    <solid android:color="#12000000" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
                <shape android:shape="oval">
                    <solid android:color="#14000000" />
                </shape>
            </item>
            <!-- Botao redondo -->
            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="2dp">
                <shape android:shape="oval">
                    <solid android:color="@color/vermelho_escuro" />
                </shape>
            </item>

        </layer-list>

    </item>

</selector>
