<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mskapp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        tools:ignore="InefficientWeight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="@color/preto"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibEnviaTeste"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/botoes_fundo"
            android:contentDescription="@string/icon"
            android:tint="@color/branco"
            mskapp:srcCompat="@drawable/ic_send" />

        <ImageButton
            android:id="@+id/ibEditaTAF"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/botoes_fundo"
            android:contentDescription="@string/icon"
            android:tint="@color/branco"
            mskapp:srcCompat="@drawable/ic_edit" />

        <ImageButton
            android:id="@+id/ibDeletaTAF"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/botoes_fundo"
            android:contentDescription="@string/icon"
            android:tint="@color/branco"
            mskapp:srcCompat="@drawable/ic_delete" />
    </LinearLayout>

</LinearLayout>